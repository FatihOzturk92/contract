{
  "display": "form",
  "components": [
    {
      "title": "Document Group",
      "collapsible": false,
      "key": "documentGroup",
      "type": "panel",
      "label": "Panel",
      "input": false,
      "tableView": false,
      "components": [
        {
          "label": "Code",
          "applyMaskOn": "change",
          "tableView": true,
          "case": "lowercase",
          "validateOn": "blur",
          "validate": {
            "required": true,
            "pattern": "^\\S*$",
            "unique": true
          },
          "unique": true,
          "errorLabel": "Bo≈üluk girilemez",
          "key": "code",
          "type": "textfield",
          "input": true
        },
        {
          "label": "Titles",
          "reorder": false,
          "addAnotherPosition": "bottom",
          "layoutFixed": false,
          "enableRowGroups": false,
          "initEmpty": false,
          "tableView": false,
          "defaultValue": [
            {}
          ],
          "key": "titles",
          "type": "datagrid",
          "input": true,
          "components": [
            {
              "label": "Language",
              "widget": "choicesjs",
              "tableView": true,
              "dataSrc": "url",
              "data": {
                "url": "https://test-amorphie-contract.burgan.com.tr/Common-LanguageType?page=0&pageSize=10",
                "headers": [
                  {
                    "key": "",
                    "value": ""
                  }
                ]
              },
              "valueProperty": "id",
              "template": "<span>{{ item.code }}</span>",
              "key": "language",
              "type": "select",
              "disableLimit": false,
              "noRefreshOnScroll": false,
              "input": true
            },
            {
              "label": "Title",
              "applyMaskOn": "change",
              "tableView": true,
              "key": "title",
              "type": "textfield",
              "input": true
            }
          ]
        },
        {
          "label": "Document",
          "widget": "choicesjs",
          "tableView": true,
          "multiple": true,
          "dataSrc": "url",
          "data": {
            "url": "https://test-amorphie-contract.burgan.com.tr/document-definition/GetAllSearch?Keyword=%20",
            "headers": [
              {
                "key": "",
                "value": ""
              }
            ]
          },
          "valueProperty": "id",
          "template": "<span>{{ item.title.name }}</span>",
          "validate": {
            "multiple": true
          },
          "key": "document",
          "type": "select",
          "disableLimit": false,
          "noRefreshOnScroll": false,
          "input": true
        }
      ]
    }
  ]
}